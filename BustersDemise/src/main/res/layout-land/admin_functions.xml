<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:gravity="center_vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <EditText
            android:layout_height="wrap_content"
            android:id="@+id/dataSetNameField"
            android:hint="Data Set Name"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_gravity="center"/>

    <ToggleButton
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Accelerometer"
            android:id="@+id/accelerometerOnButton"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textOff="Accelerometer"
            android:textOn="Accelerometer"
            android:checked="true"/>

    <ToggleButton
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Gyroscope"
            android:id="@+id/gyroscopeOnButton"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textOn="Gyroscope"
            android:textOff="Gyroscope"
            android:checked="true"
            />

    <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Adjust Recording Frequency"
            android:id="@+id/recordingFrequencyButton"
            android:singleLine="false"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"/>
    <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Start Recording"
            android:id="@+id/startRecordingButton"
            android:layout_gravity="center"/>

    <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Stop Recording"
            android:id="@+id/stopRecordingButton"
            android:layout_gravity="center"/>
</LinearLayout>