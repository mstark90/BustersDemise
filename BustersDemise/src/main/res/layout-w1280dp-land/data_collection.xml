<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:orientation="vertical">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Device Recordings"
            android:id="@+id/stateTextView"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"/>

    <EditText
            android:layout_height="wrap_content"
            android:id="@+id/dataSetNameField"
            android:hint="Data Set Name"
            android:singleLine="true"
            android:layout_marginTop="30dp"
            android:layout_width="250dp"
            android:layout_gravity="center"/>

    <ToggleButton
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Accelerometer"
            android:id="@+id/accelerometerOnButton"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textOff="Accelerometer"
            android:textOn="Accelerometer"
            android:checked="true"/>

    <ToggleButton
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Gyroscope"
            android:id="@+id/gyroscopeOnButton"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textOn="Gyroscope"
            android:textOff="Gyroscope"
            android:checked="true"
            />

    <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Adjust Recording Frequency"
            android:id="@+id/recordingFrequencyButton"
            android:singleLine="false"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"/>

    <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Start Recording"
            android:id="@+id/recordingToggleButton"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:enabled="true"/>

</LinearLayout>